<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @*<link rel="stylesheet" type="text/css" href="Content/bootstrap.css">*@
    @*<link rel="stylesheet" type="text/css" href="Content/style.css">*@
    @*<link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Nunito">*@

</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img class=" img-responsive" src="/Content/HomeAffairsLogo.jpg" alt="Home Affairs">
            </div>
            <div class="col-md-6">
                <ul class="nav nav-pills">
                    <li>@Html.ActionLink("Home", "Index", "IDNumber")</li>
                    <li>@Html.ActionLink("Validate ID Number", "validationView", "IDNumber")</li>
                    @*<li><a href="GetControlDigit">Validate ID Number</a></li>*@
                    <li><a href="#">Notices</a></li>
                    <li><a href="#">Fees</a></li>
                    <li><a href="#">About</a></li>
                    <li><a href="#">Contact Us</a></li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h1>
                    @ViewBag.Heading
                </h1>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)*@


</body>
</html>

